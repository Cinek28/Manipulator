<launch>

    <arg name="ctrl" default="effort"/>
    <arg name="cmd" default="velocity"/>

    <env name="ROSCONSOLE_FORMAT" value="[${severity}] ${message}"/>

    <param name="/robot_description" textfile="$(find manipulator)/urdf/manipulator_$(arg ctrl).urdf" />
    <param name="controller" value="$(arg cmd)"/>
    
    <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

    <!-- Load joint controller and hardware interface configurations from YAML file to parameter server -->
    <rosparam file="$(find manipulator)/config/controllers_$(arg ctrl)_$(arg cmd).yaml" command="load"/>
    <rosparam file="$(find manipulator)/config/hardware.yaml" command="load"/>
    
    <node name="tf_footprint_base"
        pkg="tf"
        type="static_transform_publisher"
        required="true"
        args="0 0 0 0 0 0 base_link world 40"/>

    <node name="spawn_model"
        pkg="gazebo_ros"
        type="spawn_model"
        args="-urdf -param /robot_description -model manipulator"
        output="screen"/>

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher"
          pkg="robot_state_publisher"
          type="robot_state_publisher"
          respawn="false"
          output="screen">
        <remap from="/joint_states" to="/manipulator/joint_states" />
    </node>

    <!-- Load the controllers -->
    <node name="controller_spawner"
        pkg="controller_manager"
        type="spawner"
        respawn="false"
        output="screen"
        ns="/manipulator"
        required="true"
        args="joint_state_controller
              shoulder_rotation_controller
              forearm_rotation_controller
              arm_rotation_controller
              wrist_rotation_controller
              wrist_pitch_controller
              gripper_rotation_controller
              --timeout 10"/>

    <!-- Load robot hardware interface -->
    <node name="RobotHWInterfaceNode"
          pkg="manipulator"
          type="RobotHWInterfaceNode"
          output="screen"
          required="false"/>

    <!-- Load 3D mouse controller node -->
    <node name="spacenav_node" pkg="spacenav_node" type="spacenav_node"
        output="screen" required="false">
        <param name="zero_when_static" value="true"/>
        <param name="static_count_threshold" value="30"/>
    </node>

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find manipulator)/urdf/urdf.rviz" />
    <param name="use_gui" value="true" />

</launch>
